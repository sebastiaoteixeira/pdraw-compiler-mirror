define pen PenType1 {
    color = red;
    thickness = 3;
};

define canvas mainCanvas "" (800, 600);

pen p1 = new PenType1;
p1 <- color red;

int x = 400;
int y = 300;
int vx = 5;
int vy = 3;
int radius = 20;
int canvasWidth = 800;
int canvasHeight = 600;
int steps = 1000;

int i;
for (i = 0; i < steps; i = i + 1) {
    p1 <- position (x, y);
    p1 down;
    p1 forward radius;
    p1 right (PI / 2);
    p1 forward radius;
    p1 right (PI / 2);
    p1 forward radius;
    p1 right (PI / 2);
    p1 forward radius;
    p1 right (PI / 2);
    p1 up;
    
    x = x + vx;
    y = y + vy;
    
    if (x + radius > canvasWidth or x - radius < 0) {
        vx = -vx;
    };
    if (y + radius > canvasHeight or y - radius < 0) {
        vy = -vy;
    };
    
    pause 10000;
};

p1 -> stdout;
